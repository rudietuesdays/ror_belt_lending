<h1>Welcome!</h1>
<form action="/lenders/create" method="post">
  <h3>Lender</h3>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>First Name: <input type="text" name="lender[first_name]"></p>
  <p>Last Name: <input type="text" name="lender[last_name]"></p>
  <p>Email: <input type="text" name="lender[email]"></p>
  <p>Password: <input type="password" name="lender[password]"></p>
  <p>Money:
    <select name="lender[money]">
      <option value="100">$100</option>
      <option value="200">$200</option>
      <option value="300">$300</option>
      <option value="400">$400</option>
      <option value="500">$500</option>
    </select>
  </p>
  <input type="submit" value="Register as a Lender">
</form>
<form action="/login" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="user_type" value="lender">
  <input type="submit" value="Already a member?">
</form>
<hr>
<form action="/borrowers/create" method="post">
  <h3>Borrower</h3>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>First Name: <input type="text" name="borrower[first_name]"></p>
  <p>Last Name: <input type="text" name="borrower[last_name]"></p>
  <p>Email: <input type="text" name="borrower[email]"></p>
  <p>Password: <input type="password" name="borrower[password]"></p>
  <p>Need Money for: <input type="text" name="borrower[need_title]"></p>
  <p>Description: <textarea name="borrower[need_descrip]" rows="8" cols="80"></textarea></p>
  <p>Amount Needed:
    <select name="borrower[need_amt]">
      <option value="1000">$1000</option>
      <option value="2000">$2000</option>
      <option value="3000">$3000</option>
      <option value="4000">$4000</option>
      <option value="5000">$5000</option>
    </select>
  </p>
  <p><input type="hidden" name="borrower[amt_raised]" value="0"></p>
  <input type="submit" value="Register as a Borrower">
</form>
<form action="/login" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="user_type" value="borrower">
  <input type="submit" value="Already a member?">
</form>
